@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    <table class="table table-dark table-hover w-100">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Wallets)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Balance</td>
                    <td>
                        <div class="btn-toolbar" role="toolbar">
                            <div class="btn-group mr-2" role="group">
                                <a type="button" class="btn btn-info" asp-page="./Wallet/Details" asp-route-id="@item.Id">Details</a>
                            </div>
                            <div class="btn-group mr-2" role="group">
                                <a type="button" class="btn btn-warning" asp-page="./Wallet/Edit" asp-route-id="@item.Id">Edit</a>
                            </div>
                            <div class="btn-group mr-2" role="group">
                                <a type="button" class="btn btn-danger" asp-page="./Wallet/Delete" asp-route-id="@item.Id">Delete</a>
                            </div>
                            
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
